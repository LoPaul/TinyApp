    <% include partials/_header %>
  </head>
  <body>
    <div class="container">
      <H6>ShortURL:      <%- shortURL %></H6>
      <form action=<%-`/urls/${shortURL}` %> method="POST" style="margin2px;">
        <label for="longURL">Enter a URL:</label>
        <input id="longURL" type="text" name="longURL" value=<%- longURL %> style="width: 300px">
        <input type="submit" value="Submit">
      </form>
    </div>
  </body>
</html>
